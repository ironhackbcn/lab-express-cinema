<section class="movie-detail">
  <div class="image">
    <img src="{{image}}" alt="{{title}}">
  </div>

  <div class="detail">
    <h2>{{title}}</h2>
    <h3>Director: {{director}}</h3>
    <h4>Stars:</h>
    <ul>
      {{#each stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <h4>Description:</h4>
    <p>{{description}}</p>
    <p>{{showtimes}}</p>
  </div>
</section>
  
  
  
  
