<div class="display-movie">

    <div class="movie-image">
        <img src="{{movie.image}}">
    </div>

    <div class="movie-description">
        <a href="/movies">Go back</a>
        <h1>{{this.movie.title}}</h1>
        <p>Director: {{this.movie.director}}</p>
        <p>Stars:</p>
        <ul>
            {{#each this.movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>

        <p>{{this.movie.description}}</p>
        {{#each this.movie.showtimes}}
        <p>{{this}} |</p>
        {{/each}}
    </div>
</div>