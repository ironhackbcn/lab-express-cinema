<div class="container-detail">
  <img src="{{image}}">
  <div class="detail-text">
    <a href="/movies">Go back</a>
    <h2>{{title}}</h2>
    <h3>Director: {{director}}</h3>
    <h4>Stars</h4>
    {{#each stars}}
    <li>
      {{this}}
    </li>
    {{/each}}
    <p>{{description}}</p>

    {{#each showtimes}}
    {{this}} |
    {{/each}}
  </div>
</div>